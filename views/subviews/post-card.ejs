<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/post-card-Styles.css">
</head>
<body>
    <div class="post-card">
        <div class="post-header">
            <div class="user-info">
                <img src="<%= post.author.ppUrl %>" alt="Profile Picture" class="profile-pic">
                <span class="username"><%= post.author.name %></span>
            </div>
            <% if (user.id == post.authorId) { %>
            <div class="post-options">
                <!-- Added a wrapper for the dropdown menu -->
                <button class="options-btn">â‹®</button>
                <div class="dropdown-menu">
                    <a href="/post/<%= post.id %>/edit">Edit</a>
                    <a href="/post/<%= post.id %>/delete">Delete</a>
                </div>
            </div>
            <% } %>
        </div>
        <div class="post-content">
            <p class="post-text"><%= post.content %></p>
            <% if (post.images && post.images.length > 0) { %>
            <div class="image-gallery">
                <% post.images.forEach(function(image) { %>
                <div class="gallery-item">
                    <img src="<%= image.imagePath %>" alt="Post Image" class="gallery-image">
                </div>
                <% }); %>
            </div>
            <% } %>
        </div>
        <div class="post-footer">
            <a href="/post/<%= post.id %>" class="comment-btn">Comment</a>
        </div>
    </div>
</body>
</html>
